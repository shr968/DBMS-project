<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Treatment Dashboard</title>
    <link rel="stylesheet" href="/css/records.css" />
  </head>
  <body>
    <header>
      <h1>Current Treatment for Patient <%= patient_id %></h1>
      <button class="add-record-btn" onclick="openForm()">
        Add New Treatment
      </button>
    </header>

    <section class="record-table">
      <h2 class="heading">Ongoing Treatments</h2>
      <% if (treatments.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Doctor ID</th>
            <th>Doctor Name</th>
            <th>Hospital ID</th>
            <th>Hospital Name</th>
          </tr>
        </thead>
        <tbody>
          <% treatments.forEach(treatment => { %>
          <tr>
            <td><%= treatment.doctor_id %></td>
            <td><%= treatment.doctor_name %></td>
            <td><%= treatment.hospital_id %></td>
            <td><%= treatment.hospital_name %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <p style="text-align: center; font-size: 1.6rem">
        No ongoing treatments found.
      </p>
      <% } %>
    </section>

    <div id="popup-form" class="popup-overlay">
      <div class="popup-content">
        <span class="close" onclick="closeForm()">&times;</span>
        <h2>Add New Treatment</h2>
        <form action="/treatment/add" method="POST">
          <label for="doctor_id">Doctor ID:</label>
          <input type="number" id="doctor_id" name="doctor_id" required />

          <label for="doctor_name">Doctor Name:</label>
          <input type="text" id="doctor_name" name="doctor_name" required />

          <label for="hospital_id">Hospital ID:</label>
          <input type="number" id="hospital_id" name="hospital_id" required />

          <label for="hospital_name">Hospital Name:</label>
          <input type="text" id="hospital_name" name="hospital_name" required />

          <button type="submit">Save Treatment</button>
        </form>
      </div>
    </div>

    <script src="/js/records.js"></script>
  </body>
</html>
